# channel1: video, which will be overlayed
new channel1 broadcast enabled
setup channel1 input /System/Library/Compositions/Fish.mov

# works, but alphamask won't be fine due to missing "chroma=YUVA"
setup channel1 output #transcode{vcodec=mp4v,vb=1500,scale=1,vfilter=rotate{angle=45}}:duplicate{dst=mosaic-bridge{id=1,width=320,height=240,vfilter=alphamask{mask=mask.png}},select=video}

